<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pirmas.laboratorinis.ControllersFX.LoginWindow">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label layoutX="211.0" layoutY="90.0" text="Welcome to the Course Manager!" />
            <Label layoutX="207.0" layoutY="131.0" text="Please login using your credentials" />
            <TextField fx:id="userPassword" layoutX="226.0" layoutY="239.0" />
            <Label layoutX="226.0" layoutY="222.0" prefHeight="17.0" prefWidth="149.0" text="Password" />
            <Button fx:id="loginButton" layoutX="226.0" layoutY="283.0" mnemonicParsing="false" onAction="#loginUser" text="Login" />
            <Button fx:id="registerButton" layoutX="315.0" layoutY="283.0" mnemonicParsing="false" onAction="#registerUserForm" text="Register" />
            <Label layoutX="226.0" layoutY="171.0" prefHeight="17.0" prefWidth="149.0" text="Username" />
            <TextField fx:id="userName" layoutX="226.0" layoutY="188.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </AnchorPane>
   </children>
</AnchorPane>
